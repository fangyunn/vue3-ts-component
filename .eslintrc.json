{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs":true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    // 组件命名
    "vue/multi-word-component-names": 0,
    // 根组件的个数
    "vue/no-multiple-template-root": 0
  }
}
